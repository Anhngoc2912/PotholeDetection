<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Setting_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:scaleY="1.5"
                android:scaleX="1.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                style="@style/titile"/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/green"
            android:layout_below="@+id/title"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My account"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag"
            android:text="@string/infor"
            android:textSize="17dp"
            android:padding="17dp"
            android:background="@drawable/cus_backgr_setting"
            android:drawableRight="@drawable/baseline_navigate_next_24"/>

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/infor"/>
        <TextView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:layout_below="@+id/tag1"
            android:textSize="17dp"
            android:padding="17dp"
            android:background="@drawable/cus_backgr_setting"
            android:drawableRight="@drawable/baseline_navigate_next_24"/>

        <TextView
            android:id="@+id/Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Notification_Settings"
            android:layout_below="@+id/language"
            android:textSize="17dp"
            android:padding="17dp"
            android:layout_marginTop="0.8dp"
            android:background="@drawable/cus_backgr_setting"
            android:drawableRight="@drawable/baseline_navigate_next_24"/>

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Notification"/>

        <TextView
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="17dp"
            android:padding="17dp"
            android:background="@drawable/cus_backgr_setting"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:layout_below="@id/tag2"/>

        <TextView
            android:id="@+id/support2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help Centre"
            android:textSize="17dp"
            android:padding="17dp"
            android:background="@drawable/cus_backgr_setting"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:layout_below="@id/support"
            android:layout_marginTop="0.8dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_btn_yellow"
            app:backgroundTint="@null"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:padding="13dp"
            android:layout_below="@id/support2"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>

</RelativeLayout>